#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define SCA LS(LC(LALT))

&sk {
    quick-release;
};


/ {
    combos {
        compatible = "zmk,combos";
        combo_game {
            timeout-ms = <50>;
            key-positions = <6 7>;
            bindings = <&tog 4>;
        };
    };
};

/ {
    macros {
        fnArrow: fnArrow {
            label = "ZM_fnArrow";
            compatible = "zmk,behavior-macro";
            tap-ms = <20>;
            #binding-cells = <0>;
            bindings = <&kp KP_EQUAL &kp GREATER_THAN>;
        };
    };
};

/ {   
	    behaviors {
	        hm: homerow_mods {
	            compatible = "zmk,behavior-hold-tap";
	            label = "HOMEROW_MODS";
	            #binding-cells = <2>;
	            tapping-term-ms = <250>;
	            quick-tap-ms = <0>;
	            flavor = "tap-preferred";
	            bindings = <&kp>, <&kp>;
	        };
  		hml: homerow_mods_layer {
	            compatible = "zmk,behavior-hold-tap";
	            label = "HOMEROW_MODS";
	            #binding-cells = <2>;
	            tapping-term-ms = <250>;
	            quick-tap-ms = <0>;
	            flavor = "tap-preferred";
	            bindings = <&mo>, <&kp>;
	        };
	    };
	keymap {
		compatible = "zmk,keymap";
		layer_0 {
			bindings = <
                &none   &kp Q           &kp W           &kp F           &kp P           &kp B                                                       &kp J           &kp L           &kp U           &kp Y           &kp APOS        &none
                &none   &kp A           &kp R           &kp S           &kp T           &kp G                                                       &kp M           &kp N           &kp E           &kp I           &kp O           &none
                &none   &hm LSHFT Z     &hm LALT X      &hm LGUI C      &kp D           &hml 1 V       &none       &none       &none       &none    &kp K           &kp H           &kp COMMA       &kp DOT         &kp QMARK       &none
                                                        &none           &none           &kp SPACE      &kp LCTRL   &none       &none       &mo 2    &kp LSHFT       &none           &none
			>;
		};   
        layer_1 {
			bindings = <
                &none   &kp N1          &kp N2          &kp N3          &kp N4          &kp N5                                                      &kp N6          &kp N7          &kp N8          &kp N9          &kp N0          &none 
	        &none   &kp INS         &kp ESC         &kp BSPC        &kp ENTER       &kp DEL                                                     &kp C_NEXT      &kp LEFT        &kp DOWN        &kp UP          &kp RIGHT       &none 
                &none   &kp F5          &kp LALT        &kp LGUI        &kp TAB         &none       &none       &none       &none       &none       &kp C_PP        &kp HOME        &kp PG_DN       &kp PG_UP       &kp END         &none 
                                                        &none           &none           &kp SPACE   &kp LCTRL 	&none       &none       &mo 3       &kp LSHFT        &none           &none       
            >;
		};
        layer_2 {
			bindings = <
                &none   &none           &kp AT          &kp AMPS        &kp PIPE        &fnArrow                                                    &kp LT          &kp TILDE       &kp PRCNT       &kp DLLR        &kp GRAVE       &none 
                &none   &kp SEMI        &kp EXCL        &kp LBRC        &kp LPAR        &kp LBKT                                                    &kp ASTRK       &kp EQUAL       &kp MINUS       &kp COLON       &kp FSLH        &none 
                &none   &none           &kp HASH        &kp RBRC        &kp RPAR        &kp RBKT    &none       &none       &none       &none       &kp GT          &kp UNDER       &kp PLUS        &kp CARET       &kp BSLH        &none 
    	                                                &none           &none           &kp SPACE   &mo 3       &none       &none       &none       &none           &none           &none  
            >;
		};   
        layer_3 {
			bindings = <
                &none   &bootloader     &none           &kp CAPS        &kp PSCRN       &none                                                       &none           &none           &none           &none           &none           &none
                &none   &kp F1          &kp F2          &kp F3          &kp F4          &kp F5                                                      &kp F6          &kp F7          &kp F8          &kp F9          &kp F10         &none 
                &none   &none           &none           &kp K_APP       &kp F11         &none       &none       &none       &none       &none       &none           &kp F12         &none           &none           &none           &none
                                                        &none           &none           &kp SPACE   &kp LCTRL   &none       &none       &none       &kp LSHFT       &none           &none 
            >;
		};
        layer_4 {
			bindings = <
                &none   &kp Q           &kp W           &kp E           &kp R           &kp T                                                       &kp Y           &kp U           &kp I           &kp LGUI        &kp LALT        &none
                &none   &kp A           &kp S           &kp D           &kp F           &kp G                                                       &kp H           &kp LEFT        &kp DOWN        &kp UP          &kp RIGHT       &none 
                &none   &kp Z           &kp X           &kp C           &kp V           &kp B       &none       &none       &none       &none       &kp N           &kp ENTER       &kp TAB         &kp BSPC        &kp ESC         &none
                                                        &none           &none           &kp LSHFT   &kp LCTRL   &none       &none       &kp TAB     &kp SPACE       &none           &none 
            >;
		};
	};
};

