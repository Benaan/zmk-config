#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

&sk {
    quick-release;
};

/ {
    combos {
        compatible = "zmk,combos";
        combo_l1 {
            timeout-ms = <30>;
            key-positions = <42 16>;
            bindings = <&kp LSHFT>;
            slow-release;
        };
        combo_l2 {
            timeout-ms = <30>;
            key-positions = <42 15>;
            bindings = <&kp LCTRL>;
            slow-release;
        };
        combo_l3 {
            timeout-ms = <30>;
            key-positions = <42 14>;
            bindings = <&kp LGUI>;
            slow-release;
        };
        combo_l4 {
            timeout-ms = <30>;
            key-positions = <42 13>;
            bindings = <&kp LALT>;
            slow-release;
        };
        combo_l5 {
            timeout-ms = <30>;
            key-positions = <42 17>;
            bindings = <&kp LC(LS(LA(LGUI)))>;
            slow-release;
        };
        combo_r1 {
            timeout-ms = <30>;
            key-positions = <19 20>;
            bindings = <&kp RSHFT>;
            layers = <0>;
            slow-release;
        };
        combo_r2 {
            timeout-ms = <30>;
            key-positions = <19 21>;
            bindings = <&kp RCTRL>;
            layers = <0>;
            slow-release;
        };
        combo_r3 {
            timeout-ms = <30>;
            key-positions = <19 22>;
            bindings = <&kp LGUI>;
            layers = <0>;
            slow-release;
        };
        combo_r4 {
            timeout-ms = <30>;
            key-positions = <19 38>;
            bindings = <&kp LALT>;
            layers = <0>;
            slow-release;
        };
        combo_r5 {
            timeout-ms = <30>;
            key-positions = <19 18>;
            bindings = <&kp LC(LS(LA(LGUI)))>;
            layers = <0>;
            slow-release;
        };
    };
};


/ {
    macros {
        fnArrow: fnArrow {
            label = "ZM_fnArrow";
            compatible = "zmk,behavior-macro";
            tap-ms = <20>;
            #binding-cells = <0>;
            bindings = <&kp KP_EQUAL &kp GREATER_THAN>;
        };
    };
};

